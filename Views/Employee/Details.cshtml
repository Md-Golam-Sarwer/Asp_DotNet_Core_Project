@model EmployeeInformationSystem.Models.Employee

@{
    ViewData["Title"] = "Details";
}

<div class="col-11 mx-auto pt-0 p-0">
    <div class="card">
        <div class="card-header bg-primary text-uppercase text-white" style="height:45px;">
            <h4>View Employee</h4>
        </div>
        <form enctype="multipart/form-data" asp-action="Create">
            <div class="row">
                <div class="col-md-6">

                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="form-group">
                        <label asp-for="EmployeeName" class="control-label"></label>
                        <input asp-for="EmployeeName" class="form-control-plaintext" readonly />
                    </div>
                </div>

                <div class="col-md-6">
                    <div class="form-group">
                        <label asp-for="Branch.BranchName" class="control-label"></label>
                        <input asp-for="Branch.BranchName" class="form-control-plaintext" readonly />
                    </div>
                </div>

                <div class="col-md-6">
                    <div class="form-group">
                        <label asp-for="Department.DepartmentName" class="control-label"></label>
                        <input asp-for="Department.DepartmentName" class="form-control-plaintext" readonly />
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="form-group">
                        <label asp-for="Email" class="control-label"></label>
                        <input asp-for="Email" class="form-control-plaintext" readonly />
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="form-group">
                        <label asp-for="CellPhone" class="control-label"></label>
                        <input asp-for="CellPhone" class="form-control-plaintext" readonly />
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="form-group">
                        <label asp-for="LastUpdate" class="control-label"></label>
                        <input asp-for="LastUpdate" class="form-control-plaintext" readonly />
                    </div>
                </div>


                <div class="col-md-6 btn-group">

                    <img src="~/Image/@Model.PhotoUrl" class="img-fluid" height="100" width="100" />
                </div>
            </div>
            

            <input type="hidden" id="hdnLastIndex" value="0" />

            <div class="col-12 btn-group">
                <div class="col-6 form-group text-right p-2">
                    <a asp-action="Index" class="btn btn-secondary">&nbsp;Back&nbsp;</a>
                    <div>
                        <a asp-action="Edit" asp-route-id="@Model.DepartmentID">Edit</a> |
                        <a asp-action="Index">Back to List</a>
                    </div>
                </div>
                <div class="col-6 form-group text-left p-2">

                </div>

            </div>

        </form>

    </div>
</div>


